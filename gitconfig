[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    whitespace = fix,trailing-space,-space-before-tab
    trustctime = false # Ignore ctime differences.
    autocrlf = input
    safecrlf = warn
    eol = lf
[apply]
    whitespace = warn
[alias]
    st = status
    sh = stash
    sp = stash pop
    co = checkout
    ci = commit
    cm = commit -m
    ca = commit --amend
    cn = commit --amend --no-edit
    br = branch -a
    ri = rebase -i
    ria = rebase -i --autosquash
    # Roman letter V indicates 5
    riv = rebase -i HEAD~5
    # Roman letter X indicates 10
    rix = rebase -i HEAD~10
    df = diff
    k = !gitk
    last = log -1
    look = log --graph --pretty=format:'%Cred %h : %Creset%s %Cgreen(%cr) %C(blue)<%an>%C(yellow)%d %Creset' --date=relative
    # Roman letter X indicates 10
    loox = log --graph --pretty=format:'%Cred %h : %Creset%s %Cgreen(%cr) %C(blue)<%an>%C(yellow)%d %Creset' --date=relative -10
    authors = shortlog -s -e -n
    count = rev-list HEAD --count # Returns the commit count

[color]
    status = auto
    branch = auto
    diff = auto
    interactive = auto
    ui = true
    wtf = yes
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[branch]
	autosetuprebase = always
[push]
	default = simple
[help]
	autocorrect = 1
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
