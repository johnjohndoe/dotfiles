# Enable support for 256 colors as used by scripts such as "colorize-maven".
export TERM="xterm-256color"

# Language settings for git gui and gitk.
export LANG="en_US.UTF-8"

# Android Studio 3 Canary "invalid dimen" bug
# https://stackoverflow.com/questions/44196672/aapt2-compile-failed-invalid-dimen-on-android-3-0-canary-1
LC_NUMERIC="en_US.UTF-8"

# Affects the default paper size for printing.
export LC_PAPER="en_GB.UTF-8"

# Less is more. Avoid screen cleaning.
export PAGER="less -X"

# Gradle
export GRADLE_HOME=/usr/bin/gradle

# Python virtualenvwrapper
export WORKON_HOME=$HOME/.virtualenvs

# Android emulator
# https://code.google.com/p/android/issues/detail?id=197254#c15
ANDROID_EMULATOR_USE_SYSTEM_LIBS=1

# Android Hierarchy Viewer
# https://developer.android.com/studio/profile/hierarchy-viewer-setup.html
export ANDROID_HVPROTO=ddm

